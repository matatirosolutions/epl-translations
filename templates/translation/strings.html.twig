{% extends 'base.html.twig' %}

{% block title %}Strings{% endblock %}

{% block body %}
    <h2>Strings</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>French</th>
                <th>English</th>
            </tr>
        </thead>
        <tbody>
            {% for translation in translations %}
                <tr {% if translation.french == translation.english %}class="untranslated"{% endif %}>
                    <td>{{ translation.stringId }}</td>
                    <td>{{ translation.french }}</td>
                    <td style="width:45%">
                        <textarea class="form-control string-translation" data-uuid="{{ translation.uuid }}">{{ translation.english }}</textarea>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
