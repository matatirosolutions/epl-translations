{% extends 'base.html.twig' %}

{% block title %}Pages{% endblock %}

{% block body %}
    <h2>Pages</h2>
    <div class="row">
        <div class="col-2">
            <table class="table table-borderless">
                <tbody>
                {% for page in pages %}
                    <tr>
                        <td><a href="{{ path('page', {'uuid': page.uuid}) }}">{{ page.title }}</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}